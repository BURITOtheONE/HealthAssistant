<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Assistant - Your Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Bootstrap JavaScript library -->
    <script src="/js/bootstrap.bundle.js"></script>
    <!-- Lucide icons for consistent iconography -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-body">
    <!-- Include the existing navbar -->
    <%- include('partials/navbar') %>

    <div class="container mt-5 mb-5">
        <!-- Profile Header Section -->
        <div class="card nav-light-green shadow-sm mb-4">
            <div class="card-body d-flex align-items-center gap-4 p-4">
                <div class="btn btn-avocado d-flex p-2 align-items-center justify-content-center" style="width: 100px; height: 100px;">
                    <% if (session.profileImage) { %>
                        <img src="<%= session.profileImage %>" alt="Profile" class="rounded-2" style="width: 100%; height: 100%; object-fit: cover;">
                    <% } else { %>
                        <i data-lucide="user-round" class="text-avocado" style="width: 48px; height: 48px;"></i>
                    <% } %>
                </div>
                <div>
                    <h1 class="h3 mb-1"><%= session.username %></h1>
                    <p class="text-muted mb-0"><%= session.email %></p>
                </div>
            </div>
        </div>

        <!-- Profile Tabs Navigation -->
        <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active btn-avocado-out" data-bs-toggle="tab" data-bs-target="#personal">
                    <i data-lucide="user-round" class="me-2"></i><p class="text-lit">Personal Info</p>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link btn-avocado-out" data-bs-toggle="tab" data-bs-target="#preferences">
                    <i data-lucide="heart" class="me-2"></i><p class="text-lit">Diet Preferences</p>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link btn-avocado-out" data-bs-toggle="tab" data-bs-target="#recipes">
                    <i data-lucide="book-open" class="me-2 "></i><p class="text-lit">My Recipes</p>
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Personal Info Tab -->
            <div class="tab-pane fade show active" id="personal">
            <div class="card shadow-sm">
                <div class="card-header nav-light-green">
                <h5 class="card-title text-light mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                <form action="/profile/update" method="POST">
                    <div class="row g-4">
                        <div class="col-md-6">
                        <div class="form-group mb-3">
                        <label for="DateOfBirth" class="form-label text-avocado">Date of Birth</label>
                        <input type="date" id="DateOfBirth" name="dateOfBirth" class="form-control cred-input" value="<%= session.dateOfBirth ? new Date(session.dateOfBirth).toISOString().split('T')[0] : '' %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Gender" class="form-label text-avocado">Gender</label>
                            <select id="Gender" name="gender" class="form-select cred-input">
                                <option value="" <%= !session.gender ? 'selected' : '' %>>Select Gender</option>
                                <option value="Male" <%= session.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                <option value="Female" <%= session.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                <option value="Other" <%= session.gender === 'Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Height" class="form-label text-avocado">Height</label>
                            <div class="input-group">
                                <input type="number" id="Height" name="heightValue" class="form-control cred-input" value="<%= session.height?.value || '' %>">
                                <select id="HeightUnit" name="heightUnit" class="form-select cred-input">
                                    <option value="cm" <%= session.height?.unit === 'cm' ? 'selected' : '' %>>cm</option>
                                    <option value="in" <%= session.height?.unit === 'in' ? 'selected' : '' %>>in</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="Weight" class="form-label text-avocado">Weight</label>
                            <div class="input-group">
                                <input type="number" id="Weight" name="weightValue" class="form-control cred-input" value="<%= session.weight?.value || '' %>">
                                <select id="WeightUnit" name="weightUnit" class="form-select cred-input">
                                    <option value="kg" <%= session.weight?.unit === 'kg' ? 'selected' : '' %>>kg</option>
                                    <option value="lb" <%= session.weight?.unit === 'lb' ? 'selected' : '' %>>lb</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-avocado">
                        <i data-lucide="save" class="me-2"></i>Save Changes
                        </button>
                    </div>
                    </div>
                </form>
                </div>
            </div>
            </div>

            <!-- Diet Preferences Tab -->
            <div class="tab-pane fade" id="preferences">
                <div class="row g-4">
                    <!-- Dietary Restrictions -->
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header nav-light-green">
                                <h5 class="card-title text-light mb-0">Dietary Preferences</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    <h6>Dietary Restrictions</h6>
                                    <% if (session.dietaryRestrictions && session.dietaryRestrictions.length > 0) { %>
                                        <div class="d-flex flex-wrap gap-2">
                                            <% session.dietaryRestrictions.forEach(function(restriction) { %>
                                                <span class="badge bg-green"><%= restriction %></span>
                                            <% }); %>
                                        </div>
                                    <% } else { %>
                                        <p class="text-muted mb-0">No dietary restrictions set</p>
                                    <% } %>
                                </div>
                                <div class="mb-4">
                                    <h6>Allergies</h6>
                                    <% if (session.allergies && session.allergies.length > 0) { %>
                                        <div class="d-flex flex-wrap gap-2">
                                            <% session.allergies.forEach(function(allergy) { %>
                                                <span class="badge bg-danger"><%= allergy %></span>
                                            <% }); %>
                                        </div>
                                    <% } else { %>
                                        <p class="text-muted mb-0">No allergies set</p>
                                    <% } %>
                                </div>
                                <a href="/preferences/edit" class="btn btn-avocado">
                                    <i data-lucide="settings" class="me-2"></i>Update Preferences
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- My Recipes Tab -->
            <div class="tab-pane fade" id="recipes">
                <div class="card shadow-sm">
                    <div class="card-header nav-light-green">
                        <h5 class="card-title text-light mb-0">My Favorite Recipes</h5>
                    </div>
                    <div class="card-body">
                        <% if (session.favoriteRecipes && session.favoriteRecipes.length > 0) { %>
                            <div class="row g-4">
                                <% session.favoriteRecipes.forEach(function(recipe) { %>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100">
                                            <img src="<%= recipe.image %>" class="card-img-top" alt="<%= recipe.title %>">
                                            <div class="card-body">
                                                <h6 class="card-title"><%= recipe.title %></h6>
                                                <p class="text-muted small mb-0">
                                                    <i data-lucide="clock" class="me-1"></i>
                                                    <%= recipe.cookingTime %> mins
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i data-lucide="book" style="width: 48px; height: 48px;" class="text-muted mb-3"></i>
                                <p class="text-muted">You haven't saved any recipes yet</p>
                                <a href="/recipes" class="btn btn-avocado">Browse Recipes</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include your existing footer -->
    <%- include('partials/footer') %>

    <!-- Initialize Lucide icons -->
    <script>
        lucide.createIcons();
    </script>
</body>
</html>