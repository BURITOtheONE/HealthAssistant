    </nav>

    <!-- Mini Navbar -->
    <nav class="navbar mini-navbar navbar-expand-lg nav-light-green shadow-sm">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item mx-auto px-3">
                    <a class="nav-link link-light" href="/fridge">Health Fridge</a>
                </li>
                <li class="nav-item mx-auto px-3">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <!-- Profile dropdown menu in the top-right corner -->
                            <a class="nav-link link-light" href="#recipes">Recipes \/</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">My Recipes</a></li>
                                <li><a class="dropdown-item" href="#">Scheduled Menu</a></li>
