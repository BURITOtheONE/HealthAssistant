<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Assistant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap JavaScript library for interactive elements -->
    <script src="js/bootstrap.bundle.js"></script>
    <script src="js/script.js"></script>
</head>
<body class="bg-body">

    <!-- Include the existing navbar -->
    <%- include('partials/navbar') %>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <button type="button" class="btn btn-avocado btn-lg addIngredient" style="margin: 2rem; height: 20rem; width: 15rem;">
                    +
                    <br>
                    Add an Ingredient
                </button>
            </div>
            <div class="col-sm card my-4">
                <!-- Display Ingredients -->
                <h2 class="text-center text-avocado mb-4">Your Ingredients</h2>
                <div class="row">
                    <% ingredients.forEach((ingredient, index) => { %>
                        <div class="col-md-4">
                            <div class="card-login mb-4">
                                <div class="card-body text-center">
                                    <h5 class="card-title"><%= ingredient.name %></h5>
                                    <p class="card-text"><%= ingredient.quantity %> <%= ingredient.unit %> (<%= ingredient.category %>)</p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="col-sm">
            </div>
        </div>
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
            </div>
            <div class="col-sm">
            </div>
        </div>
        <div class="row"><div class="col-sm">
            </div>
            <div class="col-sm">
            </div>
            <div class="col-sm">
            </div>
        </div>
      </div>

    <!-- Modal Overlay -->
    <div id="modal-overlay" class="modal-overlay">
        <div class="modal-content">
            <div id="modal-content-body">
                <!-- Dynamic content will be injected here -->
            </div>
            <div class="close-btn"></div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-5">
    <!-- Include the existing navbar -->
    <%- include('partials/footer') %>
</body>
</html>